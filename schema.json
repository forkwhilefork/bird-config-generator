{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "$id":"http://example.com/product.schema.json",
    "title":"BGP Config",
    "description":"",
    "type":"object",
    "properties":{
        "hostname":{
            "type":"string"
        },
        "bgp_sessions":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "type":{
                        "type":"string",
                        "enum":[
                            "customer",
                            "peer",
                            "transit",
                            "collector",
                            "internal"
                        ]
                    },
                    "asn":{
                        "type":"integer"
                    },
                    "as-set":{
                        "type":"string"
                    },
                    "autnum":{
                        "type":"string"
                    },
                    "local_pref":{
                        "type":"integer"
                    },
                    "stop_bgp":{
                        "type":"boolean"
                    },
                    "multihop":{
                        "type":"boolean"
                    },
                    "ipv4":{
                        "type":"object",
                        "properties":{
                            "peer_ip":{
                                "type":"string"
                            },
                            "source_ip":{
                                "type":"string"
                            },
                            "password":{
                                "type":"string"
                            },
                            "prefixes":{
                                "type":"array",
                                "items":{
                                    "type":"string"
                                },
                                "minItems":1,
                                "uniqueItems":true
                            },
                            "prefix_limit":{
                                "type":"integer"
                            }
                        },
                        "required":[
                            "peer_ip"
                        ]
                    },
                    "ipv6":{
                        "type":"object",
                        "properties":{
                            "peer_ip":{
                                "type":"string"
                            },
                            "source_ip":{
                                "type":"string"
                            },
                            "password":{
                                "type":"string"
                            },
                            "prefixes":{
                                "type":"array"
                            },
                            "prefix_limit":{
                                "type":"integer"
                            }
                        },
                        "required":[
                            "peer_ip"
                        ]
                    },
                    "filtering_method":{
                        "type":"string",
                        "enum":[
                            "prefix-list",
                            "irr-as-set",
                            "irr-autnum"
                        ]
                    },
                    "prepends":{
                        "type":"integer",
                        "minimum": 1
                    }
                },
                "required":[
                    "name",
                    "type"
                ]
            },
            "minItems":1,
            "uniqueItems":true
        },
        "rpki_protocols":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "roa4_table":{
                        "type":"string"
                    },
                    "roa6_table":{
                        "type":"string"
                    },
                    "ip":{
                        "type":"string"
                    },
                    "port":{
                        "type":"integer"
                    },
                    "retry_time":{
                        "type":"integer"
                    },
                    "retry_keep":{
                        "type":"boolean"
                    },
                    "refresh_time":{
                        "type":"integer"
                    },
                    "refresh_keep":{
                        "type":"boolean"
                    },
                    "expire_time":{
                        "type":"integer"
                    },
                    "expire_keep":{
                        "type":"boolean"
                    }
                },
                "required": [
                    "name",
                    "ip"
                ]
            }
        },
        "static_routes_v4":{
            "type":"object",
            "properties":{
                "filter_name": {
                    "type": "string"
                },
                "routes": {
                    "type": "array",
                    "items":{
                        "type":"object",
                        "properties":{
                            "destination": {
                                "type": "string"
                            },
                            "blackhole": {
                                "type": "boolean"
                            },
                            "next-hop": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "destination"
                        ]
                    }
                }
            },
            "required": [
                "routes",
                "filter_name"
            ]
        },
        "static_routes_v6":{
            "type":"object",
            "properties":{
                "filter_name": {
                    "type": "string"
                },
                "routes": {
                    "type": "array",
                    "items":{
                        "type":"object",
                        "properties":{
                            "destination": {
                                "type": "string"
                            },
                            "blackhole": {
                                "type": "boolean"
                            },
                            "next-hop": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "destination"
                        ]
                    }
                }
            },
            "required": [
                "routes"
            ]
        }
    },
    "required":[
        "hostname"
    ]
}