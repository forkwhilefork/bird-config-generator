{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "$id":"http://example.com/product.schema.json",
    "title":"BGP Config",
    "description":"",
    "type":"object",
    "properties":{
        "hostname":{
            "type":"string"
        },
        "asn":{
            "type":"integer"
        },
        "device":{
            "type":"object",
            "properties":{
                "disabled":{
                    "type":"boolean"
                },
                "scan_time":{
                    "type":"integer",
                    "minimum":1,
                    "maximum":65535
                }
            },
            "additionalProperties": false
        },
        "kernel":{
            "type":"object",
            "properties":{
                "disabled":{
                    "type":"boolean"
                },
                "scan_time":{
                    "type":"integer",
                    "minimum":1,
                    "maximum":65535
                }
            },
            "additionalProperties": false
        },
        "bgp_sessions":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "type":{
                        "type":"string",
                        "enum":[
                            "customer",
                            "peer",
                            "route_server",
                            "transit",
                            "collector",
                            "internal"
                        ]
                    },
                    "asn":{
                        "type":"integer"
                    },
                    "as-set":{
                        "type":"string"
                    },
                    "autnum":{
                        "type":"string"
                    },
                    "local_pref":{
                        "type":"integer"
                    },
                    "stop_bgp":{
                        "type":"boolean"
                    },
                    "multihop":{
                        "type":"boolean"
                    },
                    "export_policy":{
                        "type":"string",
                        "enum":[
                            "default_only",
                            "full_routes",
                            "full_routes_plus_default"
                        ]
                    },
                    "hold_time":{
                        "type":"integer",
                        "minimum":0,
                        "maximum":65535
                    },
                    "keepalive_time":{
                        "type":"integer",
                        "minimum":0,
                        "maximum":65535
                    },
                    "ipv4":{
                        "type":"object",
                        "properties":{
                            "peer_ip":{
                                "type":"string"
                            },
                            "peer_port":{
                                "type":"integer",
                                "minimum":1,
                                "maximum":65535
                            },
                            "source_ip":{
                                "type":"string"
                            },
                            "password":{
                                "type":"string"
                            },
                            "prefixes":{
                                "type":"array",
                                "items":{
                                    "type":"string"
                                },
                                "uniqueItems":true,
                                "minItems":1
                            },
                            "prefix_limit":{
                                "type":"integer"
                            },
                            "next_hop_self":{
                                "type":"boolean"
                            }
                        },
                        "required":[
                            "peer_ip"
                        ],
                        "additionalProperties": false
                    },
                    "ipv6":{
                        "type":"object",
                        "properties":{
                            "peer_ip":{
                                "type":"string"
                            },
                            "peer_port":{
                                "type":"integer",
                                "minimum":1,
                                "maximum":65535
                            },
                            "source_ip":{
                                "type":"string"
                            },
                            "password":{
                                "type":"string"
                            },
                            "prefixes":{
                                "type":"array",
                                "items":{
                                    "type":"string"
                                },
                                "uniqueItems":true,
                                "minItems":1
                            },
                            "prefix_limit":{
                                "type":"integer"
                            },
                            "next_hop_self":{
                                "type":"boolean"
                            }
                        },
                        "required":[
                            "peer_ip"
                        ],
                        "additionalProperties": false
                    },
                    "filtering_method":{
                        "type":"string",
                        "enum":[
                            "prefix-list",
                            "irr-as-set",
                            "irr-autnum"
                        ]
                    },
                    "prepends":{
                        "type":"integer",
                        "minimum": 1
                    }
                },
                "required":[
                    "name",
                    "type"
                ],
                "additionalProperties": false
            },
            "minItems":1,
            "uniqueItems":true
        },
        "rpki_protocols":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "roa4_table":{
                        "type":"string"
                    },
                    "roa6_table":{
                        "type":"string"
                    },
                    "ip":{
                        "type":"string"
                    },
                    "port":{
                        "type":"integer"
                    },
                    "retry_time":{
                        "type":"integer"
                    },
                    "retry_keep":{
                        "type":"boolean"
                    },
                    "refresh_time":{
                        "type":"integer"
                    },
                    "refresh_keep":{
                        "type":"boolean"
                    },
                    "expire_time":{
                        "type":"integer"
                    },
                    "expire_keep":{
                        "type":"boolean"
                    }
                },
                "required": [
                    "name",
                    "ip"
                ],
                "additionalProperties": false
            }
        },
        "static_routes_v4":{
            "type": "array",
            "items":{
                "type":"object",
                "properties":{
                    "destination": {
                        "type": "string"
                    },
                    "blackhole": {
                        "type": "boolean"
                    },
                    "next_hop": {
                        "type": "string"
                    },
                    "communities": {
                        "type": "array",
                        "items":{
                            "items" : [
                                {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }
                            ]
                        },
                        "uniqueItems":true,
                        "minItems":1
                    }
                },
                "required": [
                    "destination"
                ],
                "additionalProperties": false
            }
        },
        "static_routes_v6":{
            "type": "array",
            "items":{
                "type":"object",
                "properties":{
                    "destination": {
                        "type": "string"
                    },
                    "blackhole": {
                        "type": "boolean"
                    },
                    "next_hop": {
                        "type": "string"
                    },
                    "communities": {
                        "type": "array",
                        "items":{
                            "items" : [
                                {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }
                            ]
                        },
                        "uniqueItems":true,
                        "minItems":1
                    }
                },
                "required": [
                    "destination"
                ],
                "additionalProperties": false
            }
        },
        "connected_route_communities":{
            "type": "array",
            "items":{
                "type":"object",
                "properties":{
                    "destination": {
                        "type": "string"
                    },
                    "communities": {
                        "type": "array",
                        "items":{
                            "items" : [
                                {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }
                            ]
                        },
                        "uniqueItems":true,
                        "minItems":1
                    }
                },
                "required": [
                    "destination",
                    "communities"
                ],
                "additionalProperties": false
            }
        },
        "ospf_route_communities":{
            "type": "array",
            "items":{
                "type":"object",
                "properties":{
                    "destination": {
                        "type": "string"
                    },
                    "communities": {
                        "type": "array",
                        "items":{
                            "items" : [
                                {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }, {
                                    "type" : "integer",
                                    "minimum": 0,
                                    "maximum": 4294967296
                                }
                            ]
                        },
                        "uniqueItems":true,
                        "minItems":1
                    }
                },
                "required": [
                    "destination",
                    "communities"
                ],
                "additionalProperties": false
            }
        }
    },
    "required":[
        "hostname",
        "asn"
    ],
    "additionalProperties": false
}